{
    "id": "python-uv",
    "version": "1.0.3",
    "name": "Python + uv",
    "description": "Python development environment with uv package manager (via devcontainers-extra feature).",
    "documentationURL": "https://github.com/metinsenturk/devcontainer-templates/tree/main/src/python-uv",
    "licenseURL": "https://github.com/metinsenturk/devcontainer-templates/blob/main/LICENSE",
    "options": {
        "projectName": {
            "type": "string",
            "description": "Name for this project/workspace:",
            "default": "Python + uv"
        },
        "imageName": {
            "type": "string",
            "description": "Docker image name:",
            "default": "python_playground"
        },
        "pythonVersion": {
            "type": "string",
            "description": "Python version to install via uv:",
            "proposals": [
                "3.14",
                "3.13",
                "3.12",
                "3.11"
            ],
            "default": "3.13"
        },
        "bare": {
            "type": "boolean",
            "description": "Use --bare mode for uv init (minimal pyproject.toml only):",
            "default": true
        },
        "useJupyter": {
            "type": "boolean",
            "description": "Enable Jupyter notebooks (installs ipykernel on post-create):",
            "default": true
        }
    },
    "platforms": [
        "Any"
    ]

}
