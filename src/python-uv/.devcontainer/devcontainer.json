{
  "name": "${templateOption:projectName}",
  "dockerComposeFile": "./docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers-extra/features/uv:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "remoteEnv": {
    "PROJECT_NAME": "${templateOption:projectName}",
    "PYTHON_VERSION": "${templateOption:pythonVersion}",
    "UV_INIT_BARE": "${templateOption:bare}",
    "INSTALL_IPYKERNEL": "${templateOption:useJupyter}"
  },
  "postCreateCommand": "make post-create",
  "mounts": []
}
